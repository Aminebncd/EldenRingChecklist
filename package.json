{
  "name": "eldenring-checklist",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "seed": "pnpm --filter @app/server seed",
    "scrape": "tsx scraper.ts",
    "db:up": "docker compose up -d mongo",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f mongo"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.14.9",
    "tsx": "^4.16.2"
  }
}
